{% set main_width = theme.layout.main_width|default(8) %}
{% set aside_width = theme.layout.aside_width|default(4) %}
<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Foundation for Bolt{% endblock title %}</title>
    <link rel="stylesheet" href="{{ paths.theme }}css/foundation.css">
    <link rel="stylesheet" href="{{ paths.theme }}css/theme.css">
{% block headincludes %}
{% endblock headincludes %}
  </head>
  <body>
  {% block body %}

  <div class="row">

      {% if theme.layout.aside == "left" %}
        {% include '_aside.twig' %}
      {% endif %}

      <div class="{% if theme.layout.aside not in ['left', 'right'] %}large-centered{% endif %} large-{{ main_width }} columns">

          {% block main %}

          {% endblock main %}

      </div>

      {% if theme.layout.aside == "right" %}
          {% include '_aside.twig' %}
      {% endif %}


  {% endblock body %}
  </div>

    <script src="{{ paths.theme }}js/jquery.js"></script>
    <script src="{{ paths.theme }}js/what-input.js"></script>
    <script src="{{ paths.theme }}js/foundation.js"></script>
    <script src="{{ paths.theme }}js/app.js"></script>
  </body>
</html>
